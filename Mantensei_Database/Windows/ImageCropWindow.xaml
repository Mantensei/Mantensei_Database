<Window x:Class="Mantensei_Database.Windows.ImageCropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="画像トリミング" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="GhostWhite"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 画像表示エリア -->
        <Border Grid.Row="0" Background="LightGray" Margin="10">
            <Canvas x:Name="ImageCanvas" 
                    ClipToBounds="True"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseMove="Canvas_MouseMove"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp">

                <!-- 元画像 -->
                <Image x:Name="SourceImage" 
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <!-- 選択範囲を示す矩形 -->
                <Rectangle x:Name="SelectionRectangle"
                          Fill="Transparent"
                          Stroke="Red"
                          StrokeThickness="2"
                          StrokeDashArray="5,5"
                          Visibility="Collapsed"/>

                <!-- 暗い領域（選択範囲外） -->
                <Rectangle x:Name="DarkOverlay"
                          Fill="#80000000"
                          Visibility="Collapsed"/>

            </Canvas>
        </Border>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Content="リセット" Click="Reset_Click"/>
            <Button Content="OK" Click="OK_Click" IsDefault="True"/>
            <Button Content="キャンセル" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>

        <!-- プレビューエリア -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="Gray" 
                BorderThickness="1"
                Width="150" Height="150"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20">
            <Image x:Name="PreviewImage" 
                   Stretch="UniformToFill"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Border>
    </Grid>
</Window>